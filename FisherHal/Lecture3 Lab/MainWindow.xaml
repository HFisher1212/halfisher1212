<Window x:Class="Lecture3Demo2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lecture3Demo2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label x:Name="TitleLabel" Content="Pig Latin Converter" HorizontalAlignment="Left" Height="45" Margin="134,10,0,0" VerticalAlignment="Top" Width="226" FontSize="24"/>
        <Label x:Name="InputLabel" Content="Name" HorizontalAlignment="Left" Margin="63,90,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="nameTextBox" HorizontalAlignment="Left" Height="26" Margin="134,90,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="173"/>
        <Button x:Name="ConvertButton" Content="Convert" HorizontalAlignment="Left" Margin="153,146,0,0" VerticalAlignment="Top" Width="75" Click="ConvertButton_Click"/>
        <Label x:Name="OutputLabel" Content="Output" HorizontalAlignment="Left" Height="25" Margin="63,213,0,0" VerticalAlignment="Top" Width="57"/>
        <TextBox x:Name="OutputTextBox" HorizontalAlignment="Left" Height="25" Margin="134,213,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="173" IsEnabled="False"/>

    </Grid>
</Window>
